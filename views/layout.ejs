<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <script language="javascript" src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script href="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script href="/javascripts/jBreadCrumb.js"></script>
    <script src="/javascripts/moment.js"></script>
    <script href="/javascripts/main.js"></script>
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bower_components/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title> DOCHUB </title>
  </head>
  <body>
    <div class="navbar navbar-default">
      <div class="navbar-header">
        <span class="navbar-brand"><a href="/">PRANICAL</a></span>
        <button class="navbar-toggle" data-toggle="collapse" data-target="#menu">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <ul class="nav navbar-nav navbar-collapse collapse" id="menu">
        <% if(user) { %>
          <li class="menuItem"><a href="/"><i class="fa fa-home fa-2"></i> Inicio</a></li>
          <% if(user.role === 'admin'){ %>
            <li class="menuItem"><a href="/admin/"><i class="fa fa-cogs"></i> ADMINISTRADOR</a></li>
          <% } %>
        <% } %>
      </ul>
      <ul class="nav navbar-nav navbar-collapse collapse pull-right" id="menu">
        <% if(user) { %>
          <li class="menuItem pull-right"><a href="/users/logout"> <i class="fa fa-sign-out" aria-hidden="true"></i> Logout </a></li>
          <li class="menuItem pull-right"><a href="/users/profile"><i class="fa fa-user-circle" aria-hidden="true"></i> Perfil, <%= user.username %></a></li>
          <li class="menuDate"><div id="textDate"><i class="fa fa-calendar" aria-hidden="true"></i></div></li>
        <% } %>
      </ul>
    </div>
    <div class="container">
      <div class="wrapper">
      <div class="row">
        <% if (success_msg !== '' && success_msg !== null && success_msg !== undefined && success_msg !== NaN) { %>
            <div class="alert alert-success"> <%= success_msg %> </div>
        <% } %>
        <% if (error_msg !== '' && error_msg !== null && error_msg !== undefined && error_msg !== NaN) { %>
          <div class="alert alert-danger"> <%= error_msg %> </div>
        <% } %>
        <% if (errors !== '' && errors !== null && errors !== undefined && errors !== NaN) { %>
          <div class="alert alert-danger">
            There are <%= errors.length %> errors :
            <ul>
            <% for (var z=0; z < errors.length; z++){ %>
              <li> <%= errors[z].msg %> </li>
            <% } %>
           </ul>
          </div>
        <% } %>
      </div>
